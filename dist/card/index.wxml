<view class="b-card" style="width:{{width}}" bind:tap="emitEvent">
  <image src="{{img}}" style="width:{{width}};height:{{height}}" mode="widthFix" class="b-card-image"/>
  <view class="b-card-content">
    <text class="b-card-content-title {{titleEllipsis ? 'b-card-content-ellipsis' : ''}}">{{title}}</text>
    <slot />
  </view>
  <view class="b-card-info">
    <text class="b-card-info-price">{{price}}</text>
    <text class="b-card-info-number">{{volume}}</text>
  </view>
</view>